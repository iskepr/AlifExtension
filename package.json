{
    "name": "aliflang",
    "displayName": "الف",
    "publisher": "skepr",
    "description": "إضافة للغة الف مُنظمة للشفرة و مُشغلة لها و تختصر وقت الكتابة",
    "version": "0.6.6",
    "icon": "imgs/AlifLogo.png",
    "main": "src/extension.js",
    "engines": {
        "vscode": "^1.50.0"
    },
    "activationEvents": [
        "onDebug"
    ],
    "keywords": [
        "alif",
        "aliflang",
        "الف",
        "arabic",
        "ar",
        "arabic programming language",
        "rtl"
    ],
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters",
        "Debuggers",
        "Linters",
        "Themes"
    ],
    "contributes": {
        "commands": [
            {
                "command": "alif.runCode",
                "title": "تشغيل الف",
                "icon": "$(run)"
            },
            {
                "command": "rtl-alif.rtl",
                "title": "من اليمين لليسار",
                "icon": "$(debug-step-over)"
            }
        ],
        "iconThemes": [
            {
                "id": "alif",
                "label": "Alif Icons",
                "path": "src/fileIcons.json"
            }
        ],
        "languages": [
            {
                "id": "alif",
                "aliases": [
                    "Alif",
                    "aliflib",
                    "الف"
                ],
                "extensions": [
                    ".alif",
                    ".aliflib",
                    ".الف"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alif",
                "scopeName": "source.alif",
                "path": "./src/syntaxes/alif.tmLanguage.json"
            }
        ],
        "keybindings": [
            {
                "command": "alif.runCode",
                "key": "alt+shift+r",
                "mac": "alt+shift+r",
                "when": "editorLangId == alif"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "alif.runCode",
                    "when": "editorLangId == alif",
                    "group": "0_run"
                }
            ],
            "editor/context": [
                {
                    "command": "alif.runCode",
                    "when": "editorLangId == alif",
                    "group": "0_run"
                }
            ],
            "editor/title": [
                {
                    "command": "rtl-alif.rtl",
                    "when": "editorLangId == alif",
                    "group": "0_alif"
                }
            ]
        },
        "snippets": [
            {
                "language": "alif",
                "path": "./src/snippets/alif.json"
            }
        ],
        "configurationDefaults": {
            "[alif]": {
                "editor.minimap.enabled": false
            }
        },
        "alif.previewScripts": [
            "./src/script/preview.js"
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/iskepr/AlifExtension.git"
    },
    "dependencies": {
        "sudo-prompt": "^9.2.1"
    },
    "devDependencies": {
        "@vscode/vsce": "^3.6.0"
    }
}
