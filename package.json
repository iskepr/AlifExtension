{
  "name": "aliflang",
  "displayName": "الف",
  "publisher": "skepr",
  "description": "Alif lang for vs code",
  "version": "0.3.1",
  "icon": "imgs/AlifLogo.png",
  "main": "src/extension.js",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [],
  "keywords": [
    "alif",
    "aliflang",
    "الف"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Debuggers",
    "Linters",
    "Themes"
  ],
  "contributes": {
    "commands": [
      {
        "command": "rtl-arabic.active",
        "title": "Active RTL arabic"
      },
      {
        "command": "rtl-arabic.alif",
        "title": "RTL arabic",
        "icon": "$(debug-step-over)"
      },
      {
        "command": "alif.runCode",
        "title": "تشغيل الف"
      },
      {
        "command": "alif.formatDocument",
        "title": "Format Alif Document"
      }
    ],
    "debuggers": [
      {
        "type": "alif-debug",
        "label": "Debug Alif Script",
        "program": "${file}",
        "runtime": "alif",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the Alif script to debug"
              }
            }
          }
        }
      }
    ],
    "iconThemes": [
      {
        "id": "alif",
        "label": "Alif Icons",
        "path": "src/file-icons.json"
      }
    ],
    "languages": [
      {
        "id": "alif",
        "aliases": [
          "Alif",
          "aliflib",
          "الف"
        ],
        "extensions": [
          ".alif",
          ".aliflib",
          ".الف"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "alif",
        "scopeName": "source.alif",
        "path": "./src/syntaxes/alif.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "alif.runCode",
        "key": "alt+shift+r",
        "mac": "alt+shift+r",
        "when": "editorLangId == alif"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "alif.runCode",
          "when": "editorLangId == alif",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "alif.runCode",
          "when": "editorLangId == alif",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "alif",
        "path": "./src/snippets/alif.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iskepr/AlifExtension.git"
  }
}
